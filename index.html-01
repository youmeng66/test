<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>调用摄像头</title>
    <!-- 引入 uni.webview.js -->
    <script src="https://js.cdn.aliyun.dcloud.net.cn/dev/uni-app/uni.webview.1.5.2.js"></script>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        button {
            padding: 10px 20px;
            background-color: #007aff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
        button:hover {
            background-color: #0062cc;
        }
        #photo {
            display: block;
            margin: 20px auto;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <button onclick="openCamera()">拍照</button>
    <img id="photo" style="width: 200px; height: 200px; margin-top: 20px;" />

    <script>
        alert("test...")
        // 点击按钮发送拍照请求
        function openCamera() {
            if (window.uni && uni.postMessage) {
                uni.postMessage({
                    data: {
                        action: 'openCamera'
                    }
                });
            } else {
                alert('当前环境不支持 uni.webview.js 通信！');
            }
        }

        // 监听原生返回的拍照结果
        document.addEventListener('UniAppJSBridgeReady', function() {
            window.addEventListener('message', function(event) {
                try {
                    alert("收到消息")
                    const data = event.data;
                    if (data.action === 'cameraResult' && data.result) {
                        document.getElementById('photo').src = data.result;
                    }
                } catch (e) {
                    console.error('消息处理失败:', e);
                }
            });
        });
    </script>
</body>
</html>